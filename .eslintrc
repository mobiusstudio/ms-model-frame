{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "globals": {
    "__DEV__": true,
    "db": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-confusing-arrow": 0,
    "max-len": "off",
    "semi": [
      2,
      "never"
    ],
    "global-require": 0,
    "indent": [
      "error",
      "space"
    ],
    "no-tabs": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "object-curly-newline": [
      "off"
    ]
  }
}